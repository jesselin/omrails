<div class="row">
	<div class="span6 offset3 well">
		<p>
			<strong>Description:</strong>
			<%= @pin.description %>
		</p>
		<p>
			<strong>User:</strong>
			<%= @pin.user.email %>
		</p>
		<% if current_user == @pin.user %>
			<%= link_to 'Edit', edit_pin_path(@pin) %> |
		<% end %>
		<%= link_to 'Back', pins_path %>
	</div>
</div>


